% layout 'default';
% title 'list articles for tag';
<h2>List articles for tag</h2>
<p>
<ul>
% foreach my $text (keys %{$articles}) {
	<li>
		<b><%= $articles->{$text}->{cat} %></b>,
		<%= $articles->{$text}->{mtime} %>,
		<a href="/<%= $articles->{$text}->{article_id} %>">
			<%= $articles->{$text}->{text} %>
		</a>

	</li>
% }
</ul>

</p>
