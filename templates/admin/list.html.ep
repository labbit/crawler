% layout 'default';
% title 'all articles';
<h2>adminko - list</h2>
<p>
<ul>
% foreach my $text (keys %{$articles}) {
	<li>
		<%= $articles->{$text}->{mtime} %>,
		<%= $articles->{$text}->{cat} %>,
		<%= $articles->{$text}->{text} %>,
		<br />
		<a href="/admin/<%= $articles->{$text}->{aid} %>/edit">edit</a>
		&nbsp;
		<a href="/admin/<%= $articles->{$text}->{aid} %>/preview">show</a>
		<br /><br />
	</li>
% }
</ul>


</p>
